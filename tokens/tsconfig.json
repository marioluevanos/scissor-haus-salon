{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "Node16",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "target": "ESNext",
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": ["./", "**/*"],
  "exclude": ["node_modules"]
}
